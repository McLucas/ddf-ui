<i id="status-icon" class="fa fa-caret-right fa-2x result-status-icon"></i>
<i id="refresh-icon" class="fa fa-circle-o-notch fa-spin result-refresh-icon"></i>
<div id="status-table" class="hidden">
    <div class="padding-3 nav-header">
        Federated Sites
    </div>
    <table class="table included table-striped resultTable vertical-shrink-rows">
        <tbody></tbody>
    </table>


    {{#gt excludedSources.length 0}}
        <table class="table excluded table-striped resultTable vertical-shrink-rows attached">
            <tbody>
                {{#each excludedSources}}
                    <td>
                        <div class="pull-left result-source" title="{{id}}">{{id}}</div>
                        <div class="pull-right">
                            <i class="fa fa-plus add" data-source-id="{{id}}"></i>
                        </div>
                    </td>
                {{/each}}
            </tbody>
        </table>
    {{/gt}}


</div>

